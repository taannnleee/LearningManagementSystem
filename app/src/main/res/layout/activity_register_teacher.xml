<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="50dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        tools:context=".activity.RegisterTeacherActivity"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="50dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="387dp"
            android:layout_height="258dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="72dp"
            android:src="@drawable/bg_class"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageBirthday"
            android:layout_width="45dp"
            android:layout_height="33dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="112dp"
            android:src="@drawable/baseline_calendar_month_24"
            app:layout_constraintBottom_toTopOf="@+id/edtphone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.264"
            app:layout_constraintStart_toEndOf="@+id/edtBirthday11" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Create a teacher account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.169"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/edtphone"
            android:layout_width="288dp"
            android:layout_height="48dp"
            android:layout_marginTop="104dp"
            android:hint="Phone Number"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtBirthday11" />

        <EditText
            android:id="@+id/edtlastname"
            android:layout_width="339dp"
            android:layout_height="42dp"
            android:layout_marginBottom="536dp"
            android:hint="Last name"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView7" />

        <EditText
            android:id="@+id/edtfirstName"
            android:layout_width="339dp"
            android:layout_height="42dp"
            android:layout_marginBottom="480dp"
            android:hint="First name"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edtlastname"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edtlastname" />

        <EditText
            android:id="@+id/edtBirthday11"
            android:layout_width="285dp"
            android:layout_height="48dp"
            android:layout_marginBottom="420dp"
            android:hint="Birthday"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edtlastname"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edtlastname" />

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Register"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="45dp"
            android:layout_height="31dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            android:text="+84"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/edtemail"
            app:layout_constraintEnd_toStartOf="@+id/edtphone"
            app:layout_constraintHorizontal_bias="0.888"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edtpassword"
            android:layout_width="339dp"
            android:layout_height="42dp"
            android:layout_marginBottom="168dp"
            android:hint="Password"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edtemail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edtemail" />

        <EditText
            android:id="@+id/edtemail"
            android:layout_width="339dp"
            android:layout_height="42dp"
            android:layout_marginBottom="220dp"
            android:hint="Email"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edtphone"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/edtphone" />

        <Button
            android:id="@+id/btnCreateTeacher"
            android:layout_width="343dp"
            android:layout_height="48dp"
            android:layout_marginTop="896dp"
            android:backgroundTint="@color/lavender"
            android:text="Create"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imvpictureTeacher"
            android:layout_width="132dp"
            android:layout_height="92dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.358"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtBirthday11"
            app:srcCompat="@drawable/add_image" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="334dp"
            android:layout_height="54dp"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnCreateTeacher"
            app:layout_constraintStart_toStartOf="@+id/btnCreateTeacher" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
